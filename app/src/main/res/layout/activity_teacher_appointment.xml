<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context="com.example.jaanfdo.myfinalproject.TeacherAppointment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#262626">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Teacher Appointment"
            android:background="#0066ff"
            android:textColor="#fff"
            android:layout_margin="15dp"
            android:id="@+id/btnAddTeacherAppointment"
            android:onClick="AddSchedule"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedules List"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teacherappointmentlistview" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
